{
    "compilerOptions": {
        "types": [
            "node",
            "@wdio/globals/types",
        ],
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}